---
import { getCollection, type CollectionEntry } from "astro:content";
import { BrushCleaning, ShieldCheck, Crown, Cctv, Shield } from "lucide-astro";

const services = await getCollection("services", ({ data }) => {
    return !data.draft;
});

// Sort services by order
services.sort((a, b) => (a.data.order || 100) - (b.data.order || 100));
type Service = CollectionEntry<"services">;

const iconMap: Record<string, any> = {
    cctv: Cctv,
    guard: Shield,
    cleaning: BrushCleaning,
    cyber: ShieldCheck,
    vip: Crown,
};
---

<section id="servicios" class="services">
    <div class="container">
        <div class="header">
            <span class="badge">Nuestros Servicios</span>
            <h2>
                Excelencia en <span class="text-gradient">Cada Detalle</span>
            </h2>
            <p>
                Despliegue inmediato de profesionales certificados y tecnolog√≠a
                operativa para sus instalaciones.
            </p>
        </div>

        <div class="grid">
            {
                services.map((service: Service) => {
                    const Icon = iconMap[service.data.icon];
                    return (
                        <div class="card">
                            <div class="icon-wrapper">
                                {Icon ? <Icon /> : service.data.icon}
                            </div>
                            <h3>{service.data.title}</h3>
                            <p>{service.data.description}</p>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>

<style>
    .services {
        padding: 8rem 0;
        background: var(--color-bg);
        position: relative;
    }

    .services::before {
        content: "";
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        max-width: 1200px;
        height: 1px;
        background: radial-gradient(
            circle,
            var(--color-primary) 0%,
            transparent 70%
        );
        opacity: 0.3;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-primary-border);
        border-radius: 50px;
        color: var(--color-primary);
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
        background: var(--color-primary-subtle);
    }

    h2 {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        letter-spacing: -0.5px;
    }

    .header p {
        color: var(--color-text-muted);
        font-size: 1.25rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(250px, 1fr)
        ); /* Better fit for mobile */
        gap: 2rem;
    }

    .card {
        background: var(--color-surface-1);
        border: 1px solid var(--color-border);
        padding: 2.5rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-5px);
        background: var(--color-surface-2);
        border-color: var(--color-primary-light);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        cursor: pointer;
    }

    .icon-wrapper {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--color-primary);
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(200, 155, 25, 0.1);
        border-radius: 12px;
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    .card p {
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .services {
            padding: 4rem 0; /* Reduced padding */
        }

        h2 {
            font-size: 2.5rem;
        }

        .header {
            margin-bottom: 3rem;
        }
    }
</style>
