<script>
	function initNavbar() {
		// Scroll to top logic
		if (sessionStorage.getItem("scrollToTop")) {
			window.scrollTo({ top: 0, left: 0, behavior: "instant" });
			sessionStorage.removeItem("scrollToTop");
		}

		const scrollToTop = (e: Event) => {
			if (window.location.pathname === "/") {
				e.preventDefault();
				window.scrollTo({
					top: 0,
					left: 0,
					behavior: "smooth",
				});
				if (window.location.hash) {
					history.pushState(null, "", window.location.pathname);
				}
			} else {
				sessionStorage.setItem("scrollToTop", "true");
			}
		};

		const brandLink = document.querySelector(".brand");
		const homeLink = document.querySelector(".nav-link-home");
		const mobileHomeLink = document.querySelector(
			".mobile-nav-links a[href='/']",
		);

		if (brandLink) brandLink.addEventListener("click", scrollToTop);
		if (homeLink) homeLink.addEventListener("click", scrollToTop);
		if (mobileHomeLink)
			mobileHomeLink.addEventListener("click", scrollToTop);

		// Active State Logic
		const navLinks = document.querySelectorAll(".nav-links a");
		const updateActiveState = () => {
			const currentPath = window.location.pathname;
			navLinks.forEach((link) => link.classList.remove("active"));

			if (currentPath === "/") {
				const sections = ["inicio", "servicios", "soluciones"];
				let currentSection = "";

				for (const section of sections) {
					const element = document.getElementById(section);
					if (element) {
						const rect = element.getBoundingClientRect();
						if (rect.top <= 150 && rect.bottom >= 150) {
							currentSection = section;
							break;
						}
					}
				}

				if (!currentSection && window.scrollY < 100) {
					currentSection = "inicio";
				}

				if (currentSection) {
					navLinks.forEach((link) => {
						const href = link.getAttribute("href");
						if (
							href === `/#${currentSection}` ||
							(currentSection === "inicio" && href === "/")
						) {
							link.classList.add("active");
						}
					});
				}
			}
		};

		window.addEventListener("scroll", updateActiveState, { passive: true });
		updateActiveState();

		// Mobile Menu Logic
		const mobileBtn = document.querySelector(".mobile-menu-btn");
		const mobileMenu = document.querySelector(".mobile-menu");
		const iconMenu = document.querySelector(".icon-menu") as HTMLElement;
		const iconClose = document.querySelector(".icon-close") as HTMLElement;
		const mobileLinks = document.querySelectorAll(".mobile-nav-links a");

		const toggleMenu = () => {
			const isExpanded =
				mobileBtn?.getAttribute("aria-expanded") === "true";
			mobileBtn?.setAttribute("aria-expanded", (!isExpanded).toString());
			mobileMenu?.classList.toggle("open");

			if (isExpanded) {
				iconMenu!.style.display = "block";
				iconClose!.style.display = "none";
				document.body.style.overflow = "";
			} else {
				iconMenu!.style.display = "none";
				iconClose!.style.display = "block";
				document.body.style.overflow = "hidden";
			}
		};

		mobileBtn?.addEventListener("click", toggleMenu);

		mobileLinks.forEach((link) => {
			link.addEventListener("click", () => {
				if (mobileMenu?.classList.contains("open")) {
					toggleMenu();
				}
			});
		});
	}

	// Run on initial load
	initNavbar();

	// Run on view transitions
	document.addEventListener("astro:after-swap", initNavbar);
</script>

