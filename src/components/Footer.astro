---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col brand-col">
                <a href="#" class="brand">
                    Security<span class="text-gradient">Central</span>
                </a>
                <p class="tagline">
                    Protección inteligente para un mundo complejo.
                </p>
            </div>

            <div class="col">
                <h3>Empresa</h3>
                <ul>
                    <li><a href="/#inicio" data-astro-prefetch>Inicio</a></li>
                    <li>
                        <a href="/#servicios" data-astro-prefetch>Servicios</a>
                    </li>
                    <li>
                        <a href="/#nosotros" data-astro-prefetch>Nosotros</a>
                    </li>
                    <li>
                        <a href="/#contacto" data-astro-prefetch>Contacto</a>
                    </li>
                </ul>
            </div>

            <div class="col">
                <h3>Legal</h3>
                <ul>
                    <li><a href="#">Política de Privacidad</a></li>
                    <li><a href="#">Términos de Servicio</a></li>
                </ul>
            </div>

            <div class="col social-col">
                <h3>Síguenos</h3>
                <div class="social-links">
                    <a href="#" aria-label="LinkedIn">LN</a>
                    <a href="#" aria-label="Twitter">TW</a>
                    <a href="#" aria-label="Instagram">IG</a>
                </div>
            </div>
        </div>

        <div class="bottom-bar">
            <p>
                &copy; {currentYear} SecurityCentral. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(
            --color-bg
        ); /* Or Surface 1 if prefer slightly lighter */
        border-top: 1px solid var(--color-border);
        padding: 5rem 0 2rem;
        font-size: 0.9rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-text);
        text-decoration: none;
        margin-bottom: 1rem;
        display: inline-block;
    }

    .tagline {
        color: var(--color-text-muted);
        max-width: 300px;
        line-height: 1.5;
    }

    h3 {
        color: var(--color-text);
        font-size: 1rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 0.75rem;
    }

    a {
        color: var(--color-text-muted);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: var(--color-primary);
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: var(--color-text);
        font-weight: 700;
        font-size: 0.8rem;
    }

    .social-links a:hover {
        background: var(--color-primary);
        color: #000;
    }

    .bottom-bar {
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 2rem;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.85rem;
    }

    @media (max-width: 968px) {
        .row {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }

        .brand-col {
            grid-column: 1 / -1;
        }
    }

    @media (max-width: 500px) {
        .row {
            grid-template-columns: 1fr;
        }
    }
</style>
