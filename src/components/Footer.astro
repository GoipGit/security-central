---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col brand-col">
                <a href="/" class="brand" aria-label="Inicio">
                    <img
                        src="/images/logo-sarg-se.png"
                        alt="Sargent Seguridad SpA"
                        class="logo"
                    />
                    <div class="brand-text">
                        <span class="text-primary">Sargent</span>
                        <span class="text-secondary">Seguridad SpA</span>
                    </div>
                </a>
            </div>

            <div class="col">
                <h3>Empresa</h3>
                <ul>
                    <li><a href="/#inicio" data-astro-prefetch>Inicio</a></li>
                    <li>
                        <a href="/#servicios" data-astro-prefetch>Servicios</a>
                    </li>
                    <li>
                        <a href="/#nosotros" data-astro-prefetch>Nosotros</a>
                    </li>
                    <li>
                        <a href="/#contacto" data-astro-prefetch>Contacto</a>
                    </li>
                </ul>
            </div>

            <div class="col">
                <h3>Legal</h3>
                <ul>
                    <li><a href="#">Política de Privacidad</a></li>
                    <li><a href="#">Términos de Servicio</a></li>
                </ul>
            </div>
        </div>

        <div class="bottom-bar">
            <p>
                &copy; {currentYear} Sargent Seguridad SpA. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--color-bg);
        border-top: 1px solid var(--color-border);
        padding: 5rem 0 2rem;
        font-size: 0.9rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-text);
        text-decoration: none;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        position: relative;
        padding-left: 140px;
        min-height: 40px;
    }

    .logo {
        height: 80px;
        width: auto;
        position: absolute;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
        z-index: 10;
    }

    .brand-text {
        display: flex;
        flex-direction: column;
        line-height: 1.1;
        gap: 2px;
    }

    .text-primary {
        color: #ffffff;
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .text-secondary {
        color: var(--color-primary);
        font-size: 0.9rem;
        font-weight: 400;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .tagline {
        color: var(--color-text-muted);
        max-width: 300px;
        line-height: 1.5;
    }

    h3 {
        color: var(--color-text);
        font-size: 1rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 0.75rem;
    }

    a {
        color: var(--color-text-muted);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: var(--color-primary);
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: var(--color-text);
        font-weight: 700;
        font-size: 0.8rem;
    }

    .social-links a:hover {
        background: var(--color-primary);
        color: #000;
    }

    .bottom-bar {
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 2rem;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.85rem;
    }

    @media (max-width: 768px) {
        .footer {
            padding: 3rem 0 2rem;
            text-align: center;
        }

        .row {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }

        .brand-col {
            grid-column: auto;
            display: flex;
            justify-content: center;
        }

        .brand {
            padding-left: 0;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .logo {
            position: static;
            transform: none;
            margin-bottom: 0.5rem;
        }

        h3 {
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 0.5rem;
            display: inline-block;
        }
    }
</style>
